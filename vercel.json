{
  "version": 2,
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.7.3"
    }
  },
  "rewrites": [
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    },
    {
      "source": "/games/([^/]+)",
      "destination": "/api/$1.php"
    },
    {
      "source": "/",
      "destination": "/api/index.php"
    }
  ]
}